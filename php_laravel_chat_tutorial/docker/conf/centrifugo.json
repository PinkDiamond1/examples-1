{
  "port": 8000,
  "engine": "memory",
  "allowed_origins": [
    "http://localhost",
    "http://127.0.0.1"
  ],
  "proxy_connect_endpoint": "http://nginx/centrifugo/connect/",
  "proxy_publish_endpoint": "http://nginx/centrifugo/publish/",
  "proxy_subscribe_endpoint": "http://nginx/centrifugo/subscribe/",
  "proxy_http_headers": [
    "Cookie"
  ],
  "namespaces": [
    {
      "name": "rooms",
      "publish": true,
      "proxy_publish": true,
      "proxy_subscribe": true
    }
  ]
}